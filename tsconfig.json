{
	"compilerOptions": {
		"target": "ES2018",
		"module": "CommonJS",
		"lib": ["ES2018", "DOM"],
		"outDir": "./resources/dist/ts",
		"rootDir": "./resources",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmit": false,
		"allowJs": true,
		"checkJs": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"resources/ext.layers.shared/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"resources/dist",
		"docs/api",
		"types"
	]
}
