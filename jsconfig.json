{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@layers/*": ["resources/*"]
		}
	},
	"include": [
		"resources/**/*.js",
		"types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"resources/dist",
		"coverage",
		"test-results"
	],
	"typeAcquisition": {
		"enable": true
	}
}
