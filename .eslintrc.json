{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"ignorePatterns": [
		".stylelintrc.json",
		"resources/ext.layers.editor/LayerPanel.js"
	],
	"rules": {
		"no-implicit-globals": "off",
		"es-x/no-array-prototype-fill": "off",
		"es-x/no-string-prototype-repeat": "off",
		"linebreak-style": "off"
	},
	"overrides": [
		{
			"files": [ "resources/ext.layers/init.js" ],
			"rules": {
				"indent": "off",
				"no-console": "off"
			}
		},
		{
			"files": [ "**/*.js" ],
			"rules": {
				"linebreak-style": "off"
			}
		},
		{
			"files": [ "webpack.config.js", "jest.config.js", "Gruntfile.js" ],
			"env": {
				"node": true,
				"es6": true
			},
			"parserOptions": {
				"ecmaVersion": 2015,
				"sourceType": "module"
			},
			"extends": [ "wikimedia/server" ],
			"rules": {
				"es-x/no-block-scoped-variables": "off"
			}
		}
	]
}
