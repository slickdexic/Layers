{
	"manifest_version": 2,
	"name": "Layers",
	"author": [
		"Paul Vodrazka and the Layers Team"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:Layers",
	"descriptionmsg": "layers-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "other",
	"version": "0.8.1-dev",
	"requires": {
		"MediaWiki": ">= 1.44.0"
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\Layers\\": "src/"
	},
	"AutoloadClasses": {
		"MediaWiki\\Extension\\Layers\\Api\\ApiLayersSave": "src/Api/ApiLayersSave.php",
		"MediaWiki\\Extension\\Layers\\Api\\ApiLayersInfo": "src/Api/ApiLayersInfo.php"
	},
	"config": {
		"LayersEnable": {
			"description": "Master switch for Layers extension functionality",
			"value": true
		},
		"LayersDebug": {
			"description": "Enable verbose debug logging to the 'Layers' log channel",
			"value": true
		},
		"LayersMaxBytes": {
			"description": "Maximum JSON size per layer set in bytes",
			"value": 2097152
		},
		"LayersMaxLayerCount": {
			"description": "Maximum number of layers per layer set",
			"value": 100
		},
		"LayersUseBinaryOverlays": {
			"description": "Enable legacy binary overlay files (.l01, .l02, etc)",
			"value": false
		},
		"LayersDefaultFonts": {
			"description": "Available fonts in the layer editor",
			"value": [
				"Arial",
				"Roboto",
				"Noto Sans",
				"Times New Roman",
				"Courier New"
			]
		},
		"LayersMaxImageSize": {
			"description": "Maximum image size for layer editing in pixels",
			"value": 4096
		},
		"LayersThumbnailCache": {
			"description": "Enable caching of composite thumbnails",
			"value": true
		},
		"LayersImageMagickTimeout": {
			"description": "Timeout in seconds for ImageMagick operations",
			"value": 30
		},
		"LayersMaxImageDimensions": {
			"description": "Maximum width/height for layer processing",
			"value": 8192
		}
	},
	"HookHandlers": {
		"LayersHooks": {
			"class": "MediaWiki\\Extension\\Layers\\Hooks"
		},
		"LayersUIHooks": {
			"class": "MediaWiki\\Extension\\Layers\\Hooks\\UIHooks"
		},
		"LayersWikitextHooks": {
			"class": "MediaWiki\\Extension\\Layers\\Hooks\\WikitextHooks"
		}
	},
	"Hooks": {
		"BeforePageDisplay": "LayersHooks",
		"FileDeleteComplete": "LayersHooks",
		"LoadExtensionSchemaUpdates": "LayersHooks",
		"MakeGlobalVariablesScript": "LayersHooks",
		"ParserFirstCallInit": "LayersWikitextHooks",
		"FileLink": "LayersWikitextHooks",
		"GetLinkParamDefinitions": "LayersWikitextHooks",
		"GetLinkParamTypes": "LayersWikitextHooks",
		"ParserGetImageLinkParams": "LayersWikitextHooks",
		"MakeImageLink2": "LayersWikitextHooks",
		"LinkerMakeImageLink": "LayersWikitextHooks",
		"LinkerMakeMediaLinkFile": "LayersWikitextHooks",
		"ImageBeforeProduceHTML": "LayersWikitextHooks",
		"ThumbnailBeforeProduceHTML": "LayersWikitextHooks",
		"ParserMakeImageParams": "LayersWikitextHooks",
		"SkinTemplateNavigation": "LayersUIHooks",
		"SkinTemplateNavigation::Universal": "LayersUIHooks",
		"UnknownAction": "LayersUIHooks",
		"BitmapHandlerTransform": "MediaWiki\\Extension\\Layers\\LayersFileTransform::onBitmapHandlerTransform"
	},
	"Actions": {
		"editlayers": "MediaWiki\\Extension\\Layers\\Action\\EditLayersAction"
	},
	"APIModules": {
		"layerssave": "MediaWiki\\Extension\\Layers\\Api\\ApiLayersSave",
		"layersinfo": "MediaWiki\\Extension\\Layers\\Api\\ApiLayersInfo"
	},
	"MessagesDirs": {
		"Layers": [
			"i18n"
		]
	},
	"ResourceModules": {
		"ext.layers": {
			"localBasePath": "resources/ext.layers",
			"remoteExtPath": "Layers/resources/ext.layers",
			"targets": [ "desktop", "mobile" ],
			"dependencies": [ "jquery" ],
			"styles": [],
			"scripts": [
				"LayersViewer.js",
				"init.js"
			],
			"messages": [
				"layers-error-init",
				"layers-panel-title",
				"layers-panel-subtitle",
				"layers-empty",
				"layers-properties-title",
				"layers-code-title"
			]
		},
		"ext.layers.editor": {
			"localBasePath": "resources/ext.layers.editor",
			"remoteExtPath": "Layers/resources/ext.layers.editor",
			"targets": [ "desktop", "mobile" ],
			"dependencies": [
				"oojs-ui-core",
				"mediawiki.util",
				"mediawiki.api",
				"jquery"
			],
			"scripts": [
				"EventHandler.js",
				"RenderEngine.js",
				"SelectionManager.js",
				"HistoryManager.js",
				"ToolManager.js",
				"CanvasManager.js",
				"LayerPanel.js",
				"LayersValidator.js",
				"Toolbar.js",
				"LayersEditor.js"
			],
			"styles": [
				"editor-fixed.css"
			],
			"messages": [
				"layers-editor-title",
				"layers-editor-save",
				"layers-editor-cancel",
				"layers-editor-close",
				"layers-tool-select",
				"layers-tool-text",
				"layers-tool-pen",
				"layers-tool-arrow",
				"layers-tool-rectangle",
				"layers-tool-circle",
				"layers-tool-ellipse",
				"layers-tool-polygon",
				"layers-tool-star",
				"layers-tool-line",
				"layers-tool-highlight",
				"layers-tool-marquee",
				"layers-saving",
				"layers-save-success",
				"layers-save-error",
				"layers-toggle-visibility",
				"layers-toggle-lock",
				"layers-delete-layer-button",
				"layers-delete-confirm",
				"layers-no-layer-selected",
				"layers-layer-not-found",
				"layers-prop-x",
				"layers-prop-y",
				"layers-prop-text",
				"layers-prop-font-size",
				"layers-prop-color",
				"layers-prop-width",
				"layers-prop-stroke-width",
				"layers-prop-height",
				"layers-prop-stroke-color",
				"layers-prop-fill-color",
				"layers-prop-radius",
				"layers-prop-opacity",
				"layers-prop-blend",
				"layers-code-none",
				"layers-code-enable",
				"layers-code-all-visible",
				"layers-code-selected-visible",
				"layers-code-caption",
				"layers-code-copy",
				"layers-code-copied",
				"layers-code-copy-failed",
				"layers-default-text-prefix",
				"layers-default-empty",
				"layers-type-rectangle",
				"layers-type-circle",
				"layers-type-ellipse",
				"layers-type-polygon",
				"layers-type-star",
				"layers-type-arrow",
				"layers-type-line",
				"layers-type-path",
				"layers-type-highlight",
				"layers-type-layer",
				"layers-arrow-single",
				"layers-arrow-double",
				"layers-arrow-none",
				"layers-effects",
				"layers-effect-shadow",
				"layers-effect-shadow-enable",
				"layers-effect-shadow-color",
				"layers-effect-shadow-toggle",
				"layers-effect-glow",
				"layers-effect-glow-toggle",
				"layers-effect-stroke",
				"layers-effect-stroke-toggle",
				"layers-zoom-out",
				"layers-zoom-reset",
				"layers-zoom-in",
				"layers-zoom-fit",
				"layers-toggle-grid",
				"layers-save-changes",
				"layers-cancel-changes",
				"layers-blend-normal",
				"layers-blend-multiply",
				"layers-blend-screen",
				"layers-blend-overlay",
				"layers-blend-soft-light",
				"layers-blend-hard-light",
				"layers-blend-color-dodge",
				"layers-blend-color-burn",
				"layers-blend-darken",
				"layers-blend-lighten",
				"layers-blend-difference",
				"layers-blend-exclusion",
				"layers-confirm-title",
				"layers-confirm-yes",
				"layers-confirm-no",
				"layers-alert-title",
				"layers-alert-ok",
				"layers-progress-title"
			]
		}
	},
	"AvailableRights": [
		"editlayers",
		"createlayers",
		"managelayerlibrary"
	],
	"GroupPermissions": {
		"*": {
			"editlayers": false
		},
		"user": {
			"editlayers": true
		},
		"autoconfirmed": {
			"createlayers": true
		},
		"sysop": {
			"editlayers": true,
			"createlayers": true,
			"managelayerlibrary": true
		}
	}
}
