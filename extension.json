		"UnknownAction": "LayersUIHooks",
		"BitmapHandlerTransform": "MediaWiki\\Extension\\Layers\\LayersFileTransform::onBitmapHandlerTransform"
	},
	"Actions": {
		"editlayers": "MediaWiki\\Extension\\Layers\\Action\\EditLayersAction"
	},
	"APIModules": {
		"layerssave": "MediaWiki\\Extension\\Layers\\Api\\ApiLayersSave",
		"layersinfo": "MediaWiki\\Extension\\Layers\\Api\\ApiLayersInfo"
	},
	"MessagesDirs": {
		"Layers": [
			"i18n"
