		"MediaWiki\\Extension\\Layers\\Hooks\\UIHooks": "src/Hooks/UIHooks.php",
		"MediaWiki\\Extension\\Layers\\Hooks\\ParserHooks": "src/Hooks/ParserHooks.php",
		"MediaWiki\\Extension\\Layers\\Database\\LayersDatabase": "src/Database/LayersDatabase.php",
